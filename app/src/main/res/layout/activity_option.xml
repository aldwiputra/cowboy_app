<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_8sdp"
    android:background="@color/teal_700"
    tools:context=".ui.option.OptionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pixelated_font"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hi Aldi!\n who do you wanna go against?" />

        <ImageView
            android:id="@+id/iv_vs_computer"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/ic_vs_computer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_vs_player"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/pixelated_font"
            android:text="@string/player_vs_computer"
            android:textAllCaps="true"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/iv_vs_computer"
            app:layout_constraintRight_toRightOf="@id/iv_vs_computer"
            app:layout_constraintTop_toBottomOf="@id/iv_vs_computer"

            />

        <ImageView
            android:id="@+id/iv_vs_player"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/ic_vs_player"
            app:layout_constraintLeft_toRightOf="@id/iv_vs_computer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/pixelated_font"
            android:text="@string/player_vs_player"
            android:textAllCaps="true"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/iv_vs_player"
            app:layout_constraintRight_toRightOf="@id/iv_vs_player"
            app:layout_constraintTop_toBottomOf="@id/iv_vs_player" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>